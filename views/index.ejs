<%- include("header");-%>


<% if (url ==="/"){%>
<div class="mt-3 mx-5 px-5">
  <a class="btn btn-primary" role="button" href="/compose">New post</a>
</div>
<% for(var i=0; i<list.length;i++){ %>
<div class="mt-3 mx-5 px-5 pt-3">
  <h3 class="h3"><%= list[i]._id %></h3>
  <p class="overflow-text"><%= list[i].postContent %></p>
  <a href='#' class="a">read more..</a>
  <hr>
</div>
<% } %>



<% }else if(url === "compose"){ %>
<form action="/compose" method="post">
  <div class="form-group mx-5 px-5">
    <label for="input1">Title (***Please use UNIQUE Title or else it will not save the data)</label>
    <input type="text" class="form-control" id="input1" name="postName" placeholder="Another post" required autofocus>
  </div>
  <div class="form-group mx-5 px-5">
    <label for="input2">Title</label>
    <textarea class="form-control" id="input2" name="postContent" placeholder="Type more than 50 characters..." minlength="50" rows="7" required></textarea>
  </div>
  <div class=" mx-5 px-5">
    <button type="submit" class="btn btn-primary">Publish</button>
  </div>
</form>
<% } %>


